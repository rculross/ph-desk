{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "dist/config",
    "rootDir": ".",
    "declaration": true,
    "types": ["node"]
  },
  "include": [
    "vite.config.ts",
    "playwright.config.ts",
    "vitest.config.ts",
    "tailwind.config.js",
    "postcss.config.js"
  ]
}
